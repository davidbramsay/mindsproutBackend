<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mindsprout.pilot" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <name>MindSprout</name>
    <description>
         Bright Minds. Powered by Mom. Boosted by Science.
    </description>
    <author email="dramsay@mit.edu" href="http://www.mindsprout.co">
        David Ramsay @ Mindsprout.co
    </author>
    <icon src="www/img/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
