<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mindsprout.pilot" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MindSprout</name>
    <description>
         Bright Minds. Powered by Mom. Boosted by Science.
    </description>
    <author email="dramsay@mit.edu" href="http://www.mindsprout.co">
        David Ramsay @ Mindsprout.co
    </author>
    <icon src="www/img/icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <feature name="Media">
            <param name="ios-package" value="CDVSound" />
    </feature>
    <feature name="Insomnia">
    <param name="ios-package" value="Insomnia" />
    </feature>
    <feature name="File">
            <param name="ios-package" value="CDVFile" />
    </feature>
    <feature name="FileTransfer">
            <param name="ios-package" value="CDVFileTransfer" />
    </feature>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
